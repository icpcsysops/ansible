    max_pc2_ccsadmin = 8
    max_kattis_ccsadmin = 0
    max_kattis_autojudge = 0
    max_domjudge_autojudge = 24
    max_domjudge_ccsadmin = 8
    papersize = "A4"
    enable_vlc = True
    ccs = "domjudge"
    need_reverse_proxy = False
    local_kattis_server = False
    local_pc2_server = True
    local_domjudge_server = True
else:
    name = "nac2024"
