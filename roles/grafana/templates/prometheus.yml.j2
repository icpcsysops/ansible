global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.
  evaluation_interval: 15s # By default, scrape targets every 15 seconds.
  # scrape_timeout is set to the global default (10s).
scrape_configs:
  - job_name: 'grafana'
    static_configs:
      - targets: ['localhost:443']
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'db'
    static_configs:
      - targets:
{%if "domserver" in groups %}{% for host in groups["domserver"] %}
        - {{ hostvars[host].ansible_host }}:9104
{% endfor %}{% endif %}
  - job_name: node_domserver
    static_configs:
      - targets:
{%if "domserver" in groups %}{% for host in groups["domserver"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_judgehost
    static_configs:
      - targets:
{%if "judgehost" in groups %}{% for host in groups["judgehost"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_grafana
    static_configs:
      - targets:
{%if "grafana" in groups %}{% for host in groups["grafana"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_mgmt
    static_configs:
      - targets:
{%if "mgmt" in groups %}{% for host in groups["mgmt"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_scoreboard
    static_configs:
      - targets:
{%if "scoreboard" in groups %}{% for host in groups["scoreboard"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_cds
    static_configs:
      - targets:
{%if "cds" in groups %}{% for host in groups["cds"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: node_teams
    static_configs:
      - targets:
{%if "contestants" in groups %}{% for host in groups["contestants"] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}{% endif %}
  - job_name: domjudge
    basic_auth:
      username: admin
      password: {{ ADMIN_PASSWORD|default('admin') }}
    metrics_path: /api/v4/metrics/prometheus
    scheme: https
    tls_config:
      insecure_skip_verify: true
    static_configs:
      - targets:
{%if "domserver" in groups %}{% for host in groups["domserver"] %}
        - {{ hostvars[host].ansible_host }}
{% endfor %}{% endif %}
  - job_name: 'web_nginx_cds'
    static_configs:
      - targets:
{%if "cds" in groups %}{% for host in groups["cds"] %}
        - {{ hostvars[host].ansible_host }}:9113
{% endfor %}{% endif %}
  - job_name: 'web_nginx_scoreboard'
    static_configs:
      - targets:
{%if "scoreboard" in groups %}{% for host in groups["scoreboard"] %}
        - {{ hostvars[host].ansible_host }}:9113
{% endfor %}{% endif %}
  - job_name: 'web_nginx_domserver'
    static_configs:
      - targets:
{%if "domserver" in groups %}{% for host in groups["domserver"] %}
        - {{ hostvars[host].ansible_host }}:9113
{% endfor %}{% endif %}
  - job_name: 'web_fpm_domserver'
    static_configs:
      - targets:
{%if "domserver" in groups %}{% for host in groups["domserver"] %}
        - {{ hostvars[host].ansible_host }}:9253
{% endfor %}{% endif %}
